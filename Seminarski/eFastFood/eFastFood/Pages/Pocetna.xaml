<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:eFastFood.Converters"
             xmlns:VM="clr-namespace:eFastFood.ViewModels"
             mc:Ignorable="d"
             Title="{Binding Title}"
             x:Class="XamarinApp.Pages.Pocetna">
    <ContentPage.BindingContext>
        <VM:PocetnaVM/>
    </ContentPage.BindingContext>
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="Cart" IconImageSource="cart.png" Clicked="Cart_Clicked"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Resources>
        <local:ImageConverter x:Key="imgConv"></local:ImageConverter>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout Padding="5,5,0,5">
            <ActivityIndicator HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Color="#aaccff" IsRunning="{Binding this.IsBusy}" IsVisible="{Binding this.IsBusy}"></ActivityIndicator>
            <ListView RowHeight="100" ItemsSource="{Binding gpList}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Margin="5,5" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="3*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Image 
                                    x:Name="slika" 
                                    Grid.Column="0"
                                    Source="{Binding SlikaUmanjeno , Converter={StaticResource imgConv}}"
                                    >
                                </Image>
                                <StackLayout Grid.Column="1" Padding="10">
                                    <Label Text="{Binding Naziv}"></Label>
                                    <Label Text="{Binding Cijena}"></Label>
                                    <Label Text="{Binding Opis}"></Label>
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer NumberOfTapsRequired="2" Tapped="OpisModal_Tapped"></TapGestureRecognizer>
                                    </StackLayout.GestureRecognizers>
                                </StackLayout>
                                <Image 
                                    Source="plus.png"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                    HeightRequest="32"
                                    WidthRequest="32"
                                    Grid.Column="2"
                                    >
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="AddToCart_Tapped"></TapGestureRecognizer>
                                    </Image.GestureRecognizers>
                                </Image>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>